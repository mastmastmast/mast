.yc-table {
  color: #666;
  border: 1px solid $tableLineColor;
  border-bottom: none;
  &::after {
    content: none;
    width: 0 !important;
  }
  .el-table__header-wrapper {
  }
  .el-table__body-wrapper {
    background: $tableBg;
  }
  .el-table__empty-block {
    background: $tableBg;
    border-bottom: 1px solid $tableLineColor;
    .el-table__empty-text {
      color: $thColor;
    }
  }
  &.default,
  &.filter,
  &.nowrap-th,
  &.auto {
    width: 100%;
    border: 1px solid $tableLineColor;
    border-bottom: none;
    box-shadow: none;
    thead {
      th:nth-last-child(2) {
        border-right: none !important;
      }
    }
    th,
    td {
      padding: 13px 0;
      border-right: 1px solid $tableLineColor !important;
      border-bottom: 1px solid $tableLineColor !important;
    }
    th,
    td {
      padding: 13px 0;
    }
    th {
      background: $thBg;
      color: $thColor;
      font-size: 14px;
      .cell {
        white-space: normal;
        vertical-align: middle;
      }
    }
    td {
      color: $mainColor;
      font-size: 14px;
      .cell {
        white-space: nowrap !important;
      }
    }
    tbody tr, thead tr {
      background: $tableBg;
      td:last-child {
        border-right: none !important;
      }
    }
  }
  &.nowrap-th {
    th {
      background: $thBg;
      color: $thColor;
      font-size: 14px;
      .cell {
        white-space: nowrap;
        vertical-align: middle;
      }
    }
  }
  &.default, &.filter {
    th {
      background: $thBg;
      color: $thColor;
      font-size: 14px;
      .cell {
        white-space: normal;
        vertical-align: middle;
      }
    }
  }
  &.filter {
    .el-table__header-wrapper {
      //height: 60px;
      box-sizing: border-box;
      .el-input__suffix {
        right: 15px;
      }
      th {
        padding: 7px 0 6px;
      }
    }
  }
  &.auto {
    td {
      .cell {
        white-space: unset !important;
      }
    }
  }
  &.pdf {
    border: 1px solid #666;
    border-bottom: none;
    th,
    td {
      font-size: 36px;
      color: #666;
      border-right: 1px solid #ccc !important;
      border-bottom: 1px solid #ccc !important;
      > .cell {
        padding-left: 25px !important;
        padding-right: 25px;
        line-height: 1.5em;
      }
    }
    th {
      background: rgba(64, 125, 221, .1);
      color: #333;
      font-size: 56px;
      .cell {
        line-height: 1.5em;
        text-align: center;
      }
    }
    .el-table__empty-block {
      background: #fff;
      border-bottom: 1px solid #666;
      .el-table__empty-text {
        line-height: 90px;
        font-size: 36px;
        color: #666;
      }
    }
    .el-table__body-wrapper {
      border-bottom: 1px solid #666;
    }
  }
  .el-table__row:hover {
    > td,
    > td div,
    td div p,
    td div p span {
      background: $hoverBg !important;
      color: $mainColor !important;
    }
    background: $hoverBg !important;
    color: $mainColor;
  }
  &.a-underline {
    tr:hover {
      a {
        color: $highLightColor;
      }
    }
    a {
      color: $highLightColor;
      text-decoration: underline;
    }
  }
}
