@import "../lib-variable";
//表格背景
$tableBg: #fff;
//表头字体颜色
$thColor: #666;
//表头背景颜色
$thBg: #e6e6e6;
//表格分隔线颜色
$tableLineColor: #eee;
$hoverBg: #eee;
