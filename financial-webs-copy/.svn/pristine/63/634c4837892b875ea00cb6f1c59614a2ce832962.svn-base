@charset "UTF-8";
body,
html {
  font: 34px/1.5 \5FAE\8F6F\96C5\9ED1, \5B8B\4F53, "Microsoft YaHei", "Hiragino Sans GB", STHeiti, "WenQuanYi Micro Hei", "Droid Sans Fallback", SimSun, sans-serif;
  width: 100%;
  /*height: 100%;*/
  color: #666;
  background: #eeeeee;
}

input[type=checkbox],
input[type=radio] {
  display: none;
}

i.checkbox {
  font-size: 20px;
}

i.checkbox:before,
i.radio:before {
  content: "\e608";
  color: #00fffe;
}

input[type=checkbox]:checked + i.checkbox:before,
input[type=radio]:checked + i.radio:before {
  content: "\e607";
  color: #00fffe;
}

