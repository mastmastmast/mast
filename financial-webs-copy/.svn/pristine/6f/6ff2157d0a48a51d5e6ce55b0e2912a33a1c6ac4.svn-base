.policy-effect {
  .evaluate {
    position: relative;
    i {
      position: absolute;
      top: 20px;
      left: 20px;
      font-size: 44px;
      color: #ec8767;
    }
    .summary {
      min-height: 44px;
      padding-left: 60px;
      font-size: 14px;
      color: #666;
      p:nth-of-type(2) {
        margin-top: 6px;
        font-size: 16px;
        font-weight: bold;
        color: #e95906;
        line-height: 1.3;
      }
    }
  }
}

.content-box {
  .content-box-title {
    font-size: 15px;
    color: #333;
    font-weight: bold;
  }
}

.risk-invest {
  padding-top: 0;
  padding-bottom: 0;
  .time-line {
    position: relative;
    width: 100%;
    height: 160px;
    padding-bottom: 10px;
    overflow-y: hidden;
    overflow-x: auto;
    white-space: nowrap;
    span {
      display: inline-block;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      margin: auto;
      height: 4px;
      border-radius: 2px;
      background-color: #FFEEE5;
    }
    .time-line-start {
      width: 60px;
      height: 150px;
      position: relative;
      display: inline-block;
      span {
        width: 60px;
      }
    }
    .time-line-content {
      width: 300px;
      height: 150px;
      position: relative;
      display: inline-block;
      margin-left: 20px;
      span {
        width: 300px;
        &::before {
          content: '';
          position: absolute;
          top: -5px;
          left: -17px;
          width: 14px;
          height: 14px;
          border-radius: 50%;
          background: #E64e00;
        }
      }
      .time-line-text {
        font-size: 15px;
        color: #666;
        line-height: 1.6;
        position: absolute;
        .go-to {
          cursor: pointer;
        }
        p:nth-of-type(2) {
          color: #333333;
        }
      }
      &:nth-child(odd) {
        .time-line-text {
          top: 90px;
          left: -10px;
        }
      }
      &:nth-child(even) {
        .time-line-text {
          top: 10px;
          left: -10px;
        }
      }
    }
    //滚动条
    ::-webkit-scrollbar {
      height: 17px;
    }

    //定义滚动条轨道
    ::-webkit-scrollbar-track {
      border-radius: 3px;
      background-color: #F9F9F9;
    }

    // 定义滑块
    ::-webkit-scrollbar-thumb {
      border-radius: 3px;
      width: 17px;
      height: 8px;
      background-color: #42475d;
    }
  }
}

.dec-record {
  padding-bottom: 50px;
  .time-select {
    position: relative;
    height: 50px;
    ul {
      height: 28px;
      width: 208px;
      border: 1px solid #EF7A3C;
      border-radius: 5px;
      position: absolute;
      right: 20px;
      top: 0;
      li {
        width: 33.3%;
        float: left;
        line-height: 28px;
        text-align: center;
        cursor: pointer;
        &.active {
          background-color: #EF7A3C;
          color: #FFFFFF;
        }
      }
    }
  }
  .record-policy {
    position: relative;
    height: 220px;
  }
  .chart-line {
    margin-top: 25px;
    overflow: hidden;
  }
}

.dec-record {
  .record-col {
    padding-right: 15px;
    padding-left: 15px;
  }
  .my-charts {
    .draw-line {
      border: 1px solid #eeeeee;
      position: relative;
      .charts-tooltip {
        position: absolute;
        top: 20px;
        right: 20px;
        z-index: 100;
        i {
          font-size: 15px;
          //background-color: #b7b7b7;
          color: #B7B7B7;
          border-radius: 50%;
        }
      }
    }
  }
}

