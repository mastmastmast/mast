.yc-label {
  display: inline-block;
  overflow: hidden;
  max-width: 100%;
  height: 25px;
  margin-right: 8px;
  padding: 0 10px;
  line-height: 25px;
  white-space: nowrap;
  text-overflow: ellipsis;
  border-radius: 3px;
  box-sizing: border-box;
}

.yc-label.default {
  display: inline-block;
  height: auto;
  text-align: center;
  border: 1px solid #e8e8e8;
}

.yc-label.default .desc {
  color: #6bd5fc;
}

.yc-label.green {
  color: #50c592;
  border: 1px solid #50c592;
}

.yc-label.blue {
  color: #6bd5fc;
  border: 1px solid #6bd5fc;
}

.yc-label.info {
  color: #8c9bdb;
  border: 1px solid #8c9bdb;
  cursor: default;
}

.yc-label.info i {
  margin-left: 5px;
}

.yc-label.red {
  color: #ff6565;
  border: 1px solid #ff6565;
}

.yc-label.pdf {
  display: block !important;
  margin-top: 15px;
  width:auto !important;
  height: auto;
  line-height: 64px;
  margin-right: 25px;
  white-space: normal;
  word-break: break-all;
  border-radius: 10px;
  border-width: 2px;
}
.yc-label.pdf:first-of-type {
  margin-top: 0 ;
}

